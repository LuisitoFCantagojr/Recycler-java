<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.football.football_leagues">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_football_sports"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_football_sports"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.football.football_leagues.controller.PredictionController"></activity>
        <activity android:name="com.football.football_leagues.controller.CountryController" />
        <activity android:name="com.football.football_leagues.controller.StandingController" />
        <activity android:name="com.football.football_leagues.controller.LeagueController" />
        <activity android:name="com.football.football_leagues.controller.DashboardController" />
        <activity android:name="com.football.football_leagues.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>