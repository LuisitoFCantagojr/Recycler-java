<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"

    tools:context=".controller.StandingController"
    android:background="@drawable/gradient_box_type"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_marginTop="7dp">
        <TextView
            android:id="@+id/countryName_prediction"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:text="Country Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:textSize="14dp"
            android:background="@drawable/row_border"
            />
        <TextView
            android:id="@+id/league_name_prediction"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:text="League Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:textSize="14dp"
            android:background="@drawable/row_border"
            />
        <TextView
            android:id="@+id/h_t_prediction"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:text="H-T"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:textSize="14dp"
            android:background="@drawable/row_border"
            />
        <TextView
            android:id="@+id/h_s_prediction"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:text="H-S"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:textSize="14dp"
            android:background="@drawable/row_border"
            />
        <TextView
            android:id="@+id/a_t_prediction"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:text="A-T"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:textSize="14dp"
            android:background="@drawable/row_border"
            />
        <TextView
            android:id="@+id/a_s_prediction"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:text="A-S"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:textSize="14dp"
            android:background="@drawable/row_border"
            />
        <TextView
            android:id="@+id/date_activity_prediction"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:text="Date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:textSize="14dp"
            android:background="@drawable/row_border"
            />



    </LinearLayout>

</LinearLayout>